@model ShopDoNu.Models.Product

@{
    ViewBag.Title = "Detail Product Admin";
}
@{
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            @if (Model.Img == "")
            {
                <img src="~/Img/All/Img-Err.png" width="100%" id="ProductImg">
            }
            else
            {
                <img src="~/Img/All/@Model.Img" width="100%" id="ProductImg">
            }
        </div>
        <div class="col-2">
            <h2>@Model.Name</h2>
            <h4>@String.Format(format, "{0:c0}", Model.Price)</h4>
            Quantity<input type="number" value="1" min="1">
            <a href="/Cart/AddToCart/@Model.Id" class="btn">Add to cart</a>
            <a href="" class="btn">Buy now</a>
            <h3>Product detail</h3>
            <p>
                @Model.Description
            </p>
        </div>
    </div>
</div>
