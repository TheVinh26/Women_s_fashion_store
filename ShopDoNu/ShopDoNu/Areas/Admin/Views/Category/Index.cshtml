@model List<ShopDoNu.Models.Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/Admin/Views/Shared/Admin_LayoutPage.cshtml";
}
<a href="/Admin/Category/AddCategory" class="btn">Add Category</a>
<h2 class="title">Category Management</h2>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            Category Name
        </th>
        <th>
            Action
        </th>
    </tr>
    @{
        int stt = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>@stt</td>
            <td>@item.Name</td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@item.Id" style="text-decoration:none">Delete </a>
            </td>
        </tr>
        stt++;
    }
</table>

